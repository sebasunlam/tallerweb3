<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark justify-content-between">
        @Html.ActionLink("Nombre de aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @Html.Partial("_pvMenuAnonimo")
                @if (Request.IsAuthenticated)
                {
                    @(User.IsInRole("Administrador") ? Html.Partial("_pvMenuAdmin") : Html.Partial("_pvMenuUsuario"))
                }
            </ul>
            @Html.Partial("_partialLogIn")
        </div>

    </nav>

    @RenderBody()

    <hr />
    <footer class="navbar fixed-bottom navbar-light bg-light">
        <span class="navbar-brand">&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</span>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sitescript")
    @RenderSection("scripts", required: false)
</body>
</html>
