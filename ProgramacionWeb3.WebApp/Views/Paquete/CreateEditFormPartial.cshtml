@model ProgramacionWeb3.WebApp.Models.PaqueteViewModel


@Html.AntiForgeryToken()

<div class="form-group">
    @Html.LabelFor(x => x.Nombre)
    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Descripcion)
    @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(x => x.PrecioPorPersona)
    @Html.TextBoxFor(x => x.PrecioPorPersona, new { @class = "form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(x => x.LugaresDisponibles)
    @Html.TextBoxFor(x => x.LugaresDisponibles, new { @class = "form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(x => x.FechaInicio)
    <div class="input-group date datepicker" data-provide="datepicker">
        @Html.TextBoxFor(x => x.FechaInicio, new {@class = "form-control"})
        <div class="input-group-addon">
            <span class="fa fa-calendar"></span>
        </div>
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(x => x.FechaFin)
    <div class="input-group date datepicker" data-provide="datepicker">
        @Html.TextBoxFor(x => x.FechaFin, new { @class = "form-control"})
        <div class="input-group-addon">
            <span class="fa fa-calendar"></span>
        </div>
    </div>
</div>

<div class="form-check">
    <label class="form-check-label">
        @Html.CheckBoxFor(x => x.Destacado)
        Destacado
    </label>
</div>

<div class="form-group">
    <label for="file">Archivo de imagen</label>
    <input type="file" class="form-control-file" id="file" name="file">
</div>

<hr />

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary(false)
    </div>
}


<button type="submit" class="btn btn-primary">Guardar</button>
<a href="@Url.Action("Index")" class="btn btn-outline-secondary">Volver</a>